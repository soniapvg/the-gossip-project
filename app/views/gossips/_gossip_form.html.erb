<%= form_with model: @gossip do |form| %>
   <%= form.label :title, "Titre ?" %>
   <%= form.text_field :title %>
   <%= form.label :content, "C'est quoi le gossip ?" %>
   <%= form.text_area :content, size: "60x10" %>
   <%= form.fields_for :user, include_id: false do |user_subform| %>
      <%= user_subform.label :first_name %>
      <%= user_subform.text_field :first_name %>
   <% end %>
   <%= form.submit %>
<% end %>